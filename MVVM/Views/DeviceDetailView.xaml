<UserControl 
    x:Class="TobiiGlassesManager.MVVM.Views.DeviceDetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:viewModel="clr-namespace:TobiiGlassesManager.MVVM.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModel:DeviceViewModel, IsDesignTimeCreatable=false}"
    mc:Ignorable="d">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>
    
    <StackPanel>
        <TextBlock Text="{Binding Id}"></TextBlock>
        <TextBlock Text="{Binding Serial}"></TextBlock>
        <CheckBox IsChecked="{Binding Selected}"></CheckBox>
        <Image Width="20" 
               Height="20" 
               Visibility="{Binding IsCalibrated, Converter={StaticResource BoolToVis}}" 
               Source="Images/eye-scanning.png"/>
        <Image Width="20" 
               Height="20" 
               Visibility="{Binding IsRecording, Converter={StaticResource BoolToVis}}" 
               Source="images/screen-recorder.png"/>
    </StackPanel>
</UserControl>